{{#with data}}
  <div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="{{this.image}}"
          class="img-fluid rounded-start img-details"
          alt="{{this.title}}"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <a href="movies">Go back</a>
          <h4 class="card-title">{{this.title}}</h4>
          <h6 class="card-title">{{this.director}}</h6>
          <p class="card-title">Stars</p>
          <ul>
            {{#each this.stars}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <p class="card-text">{{this.description}}</p>
          <div class="show-times">
            {{#each this.showtimes}}
              <p>{{this}}|</p>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
{{/with}}